<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage">
            <property name="title" type="String" default="Tribble AI Assistant" label="Component Title" description="Title displayed on the component"/>
            <property name="enableChat" type="Boolean" default="true" label="Enable Chat" description="Show chat interface"/>
            <property name="enableUpload" type="Boolean" default="true" label="Enable Upload" description="Show upload interface"/>
            <property name="conversationId" type="String" label="Conversation ID" description="Optional conversation ID for chat"/>
            <property name="welcomeMessage" type="String" default="Hello! I'm your Tribble AI assistant. How can I help you today?" label="Welcome Message" description="Welcome message displayed to users"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
