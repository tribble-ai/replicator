# Excedra API Configuration
EXCEDRA_BASE_URL=https://api.excedra.com
EXCEDRA_CLIENT_ID=your-client-id-here
EXCEDRA_CLIENT_SECRET=your-client-secret-here
EXCEDRA_TOKEN_ENDPOINT=https://auth.excedra.com/oauth/token

# Optional: Pre-existing OAuth2 tokens (if you have them)
# EXCEDRA_ACCESS_TOKEN=
# EXCEDRA_REFRESH_TOKEN=
# EXCEDRA_TOKEN_EXPIRES_AT=

# Tribble Configuration
TRIBBLE_API_KEY=your-tribble-api-key-here
TRIBBLE_BRAIN_URL=https://brain.tribble.ai
TRIBBLE_INGEST_URL=https://ingest.tribble.ai

# Sync Configuration
SYNC_SCHEDULE=0 */6 * * *
# Cron format: "0 */6 * * *" = every 6 hours
# Examples:
#   "0 * * * *"    = every hour
#   "0 0 * * *"    = daily at midnight
#   "*/15 * * * *" = every 15 minutes

# Data Sources to Sync (comma-separated)
# Options: documents, products, retailers, all
SYNC_SOURCES=documents,products

# Sync Settings
SYNC_BATCH_SIZE=100
SYNC_MAX_RETRIES=3
SYNC_CHECKPOINT_FILE=.excedra-checkpoint.json

# Optional: Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=10

# Optional: Advanced Settings
ENABLE_DEBUG_LOGGING=false
ENABLE_CHECKPOINT_PERSISTENCE=true
